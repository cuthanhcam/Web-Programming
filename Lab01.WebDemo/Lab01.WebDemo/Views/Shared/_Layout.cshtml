<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - VNExpress</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/custom.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <header class="bg-danger text-white py-3">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 d-flex align-items-center">
                        <h1 class="mb-0">VNEXPRESS</h1>
                        <span class="ml-3 date-display">@DateTime.Now.ToString("dddd, dd/MM/yyyy")</span>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="#" class="text-white mr-3">Đăng nhập</a>
                        <a href="#" class="text-white">Đăng ký</a>
                    </div>
                </div>
            </div>
        </header>


        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("Index", "Tintuc")">
                                <i class="fas fa-home"></i> Trang chủ
                            </a>
                        </li>
                        @if (ViewBag.Categories != null)
                        {
                            foreach (var category in ViewBag.Categories)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/Tintuc/TheLoai/@category.IDLoai">@category.Tentheloai</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>




        <!-- Nội dung -->
        <div class="container body-content">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="mt-4">
            <div class="container p-4">
                <div class="row">
                    <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                        <h5 class="text-uppercase">Liên hệ</h5>
                        <p>
                            Địa chỉ: Thủ Đức, TP.HCM<br>
                            Điện thoại: 0353818874<br>
                            Email: cuthanhcam04@gmail.com
                        </p>
                    </div>
                    <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                        <h5 class="text-uppercase">Liên kết</h5>
                        <ul class="list-unstyled footer-links">
                            <li><a href="#">Giới thiệu</a></li>
                            <li><a href="#">Chính sách bảo mật</a></li>
                            <li><a href="#">Điều khoản sử dụng</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="text-center p-3 bg-dark text-white">
                &copy; @DateTime.Now.Year - VNExpress - Cu Thanh Cam
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
